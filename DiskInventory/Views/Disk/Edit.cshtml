@model Disk
@{
    string title = ViewBag.Action + "Disk";
    ViewBag.Title = title;
}


<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="CdName">Description</label>
        <input asp-for="CdName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Description</label>
        <input asp-for="ReleaseDate" class="form-control" />
    </div>


    <div>
        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" class="form-control">
            <option value="select a genre">select a genre</option>
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.GenreId">@g.Description</option>
            }
        </select>

    </div>
    <div>
        <label asp-for="DiskTypeId">Disk Type</label>
        <select asp-for="DiskTypeId" class="form-control">
            <option value="select a disk type">select a disk type</option>
            @foreach (DiskType t in ViewBag.DiskTypes)
            {
                <option value="@t.DiskTypeId">@t.Description</option>
            }
        </select>

    </div>
    <div>
        <label asp-for="DiskStatusId">Status</label>
        <select asp-for="DiskStatusId" class="form-control">
            <option value="select a status">select a status</option>
            @foreach (Status s in ViewBag.Statuses)
            {
                <option value="@s.DiskStatusId">@s.Description</option>
            }
        </select>

    </div>
    <input type="hidden" asp-for="GenreId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
