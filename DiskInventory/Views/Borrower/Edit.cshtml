@model Borrower
@{
    string title = ViewBag.Action;
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"> </div>
    <div class="form-group">
        <label asp-for="Fname">First Name</label>
        <input asp-for="Fname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Lname">Last Name</label>
        <input asp-for="Lname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNum">Phone Number</label>
        <input asp-for="PhoneNum" class="form-control" />
    </div>
    <input type="hidden" asp-for="BorrowerId" />
    <br />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Borrower" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

